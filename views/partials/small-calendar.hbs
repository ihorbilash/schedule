<div class="small-calendar">
  <div class="month">
    <div class="month-header">

       <button class="follow-date-btn" onclick="getDate()">Follow Date</button>
      <input id="date-input" type="date">
    </div>
    <div class="weekdays">
      <button class="prev" onclick="previousWeek()">Previous Week</button>

      <button class="next" onclick="nextWeek()">Next Week</button>
    </div>
    <div class="days">
      <!-- Days will be dynamically generated here -->
    </div>
  </div>
</div>